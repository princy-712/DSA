/*
class Node {
    int data;
    Node left;
    Node right;
    Node(int data) {
        this.data = data;
        left = null;
        right = null;
    }
} */

class Solution {
    int max = 0;

    public int diameter(Node root) {
        height(root);
        return max;
    }

    private int height(Node root){
        if(root == null) return 0;

        int left = height(root.left);
        int right = height(root.right);

        // update diameter
        max = Math.max(max, left + right);

        // return height
        return Math.max(left, right) + 1;
    }
}