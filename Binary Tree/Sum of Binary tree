/*
// A Binary Tree node
class Node
{
    int data;
    Node left, right;

    Node(int item)
    {
        data = item;
        left = right = null;
    }
}
*/

class Solution {
    // Function to return sum of all nodes of a binary tree
    static int sumBT(Node root) {
        // Your code here
         if(root == null) return 0;   // base case
        
        int leftSum = sumBT(root.left);   // sum of left tree
        int rightSum = sumBT(root.right); // sum of right tree
        
        return root.data + leftSum + rightSum;
    }
}