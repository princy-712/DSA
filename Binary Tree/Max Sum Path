/*
class Node{
    int data;
    Node left, right;
    Node(int d){
        data=d;
        left=right=null;
    }
}
*/

class Solution {
    int maxsum=Integer.MIN_VALUE;
    int findMaxSum(Node root) {
        // code here
        helper(root);
        return maxsum;
        
    }
    
    int helper(Node root){
        if(root == null) return 0;
        
        int left = Math.max(0,helper(root.left));
        int ryt = Math.max(0,helper(root.right));
        
        maxsum = Math.max(maxsum, left+ryt+root.data);
        return Math.max(left,ryt) + root.data;
    }
}